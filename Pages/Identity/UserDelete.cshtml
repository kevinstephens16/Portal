@page
@model Portal.Pages.Identity.UserDeleteModel
@{  
    ViewBag.Workflow = "Delete";
}

<div class="box box-widget">
    <div class="box-header with-border text-center bg-black text-white">
        <h3>Do you want to delete your account?</h3>
    </div>
    <div class="box-body">
        <div class="row form-group">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <form method="post">
                    <h3 class="bg-danger text-white text-center p-2">Caution</h3>
                    <div class="text-center p-2">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-page="Dashboard" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="box-footer text-center">
        <div asp-validation-summary="All" class="text-danger m-2"></div>
    </div>
</div>