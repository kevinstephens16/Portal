@page
@model Portal.Pages.Identity.UserPasswordRecoveryModel
@{
    ViewData["showNav"] = false;
    ViewData["banner"] = "Password Recovery";
    Layout = "_CustomLayout";
}

<div class="box box-widget">
    <div class="box-header with-border text-center bg-black text-white">
        <h3>Password Recovery</h3>
    </div>
    <div class="box-body">
        <div class="row form-group">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <form method="post">
                    <div class="form-group">
                        <label>Email Address</label>
                        <input class="form-control" name="email" />
                    </div>
                    <button class="btn btn-primary">Send Recovery Email</button>
                    <a asp-page="SignIn" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <div class="box-footer text-center">
        <div asp-validation-summary="All" class="text-danger m-2"></div>

        @if (TempData.ContainsKey("message"))
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
    </div>
</div>