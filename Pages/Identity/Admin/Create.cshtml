@page
@model Portal.Pages.Identity.Admin.CreateModel
@{
    ViewBag.Workflow = "Create";
    ViewData["Title"] = "Creat Account";
}

<div class="box box-widget">
    <div class="box-header with-border text-center rowcolor">
        <h3>Create Account</h3>
    </div>
    <div class="box-body">
        <div class="row form-group">
            <div class="col-md-4 col-sm-4 col-xs-12">
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12 text-center">
                <form method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" name="email" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Create</button>
                        <a asp-page="Dashboard" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="box-footer text-center">
        @if (TempData.ContainsKey("message"))
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        <div asp-validation-summary="All" class="text-danger m-2"></div>
    </div>
</div>
